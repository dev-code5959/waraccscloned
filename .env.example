# File: .env.example

APP_NAME="ACCSZone"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=waraccounts
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Looking to send emails in production? Check out our Email API/SMTP product!
MAIL_MAILER=smtp
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@accszone.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# NowPayments Configuration
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_SANDBOX=true
NOWPAYMENTS_IPN_SECRET=
NOWPAYMENTS_CALLBACK_URL="${APP_URL}/webhooks/nowpayments"

# Application Settings
DEFAULT_CURRENCY=USD
MIN_DEPOSIT_AMOUNT=10.00
MAX_DEPOSIT_AMOUNT=10000.00
REFERRAL_COMMISSION_RATE=5.0

# File Upload Settings
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpeg,png,jpg,gif,webp
ALLOWED_DOCUMENT_TYPES=pdf,txt,doc,docx

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=100
RATE_LIMIT_PURCHASE=10

# Security Settings
FORCE_HTTPS=false
SESSION_SECURE_COOKIE=false
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,::1
SESSION_DOMAIN=null

# Admin Settings
ADMIN_EMAIL=admin@accszone.com
SUPPORT_EMAIL=support@accszone.com
DEFAULT_TIMEZONE=UTC

# Feature Flags
ENABLE_REFERRAL_SYSTEM=true
ENABLE_TWO_FACTOR=true
ENABLE_KYC_VERIFICATION=false
ENABLE_CRYPTO_PAYMENTS=true
ENABLE_PROMO_CODES=true


# NowPayments Configuration
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_SANDBOX_API_KEY=
NOWPAYMENTS_IPN_SECRET=
NOWPAYMENTS_IPN_CALLBACK=
NOWPAYMENTS_SANDBOX=false

# Referral Program
REFERRAL_COMMISSION_RATE=10
REFERRAL_MINIMUM_PAYOUT=50
REFERRAL_COOKIE_DURATION=30
